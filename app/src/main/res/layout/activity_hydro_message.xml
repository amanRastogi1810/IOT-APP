                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/hyrdo_massage_white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="JET 4"
                                android:textColor="#DAFFFF"
                                android:textSize="15sp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Running Time"
                                android:textColor="#DAFFFF"
                                android:textSize="12sp">

                            </TextView>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <SeekBar
                                android:id="@+id/animate_progress_bar4"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:max="180"
                                android:progress="5"
                                android:secondaryProgress="0"
                                android:min="0"
                                android:thumb="@drawable/thumb"
                                android:progressTint="#E5492A"
                                android:outlineAmbientShadowColor="#000"
                                android:thumbTint="#FFFFFF" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="  0\nSec"
                                android:textColor="#DAFFFF"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="180\nSec"
                                android:textColor="#DAFFFF"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <android.support.design.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="7dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/jet4minus"
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:tint="@color/black"
                                    android:layout_gravity="start"
                                    android:layout_marginEnd="30dp"
                                    android:src="@drawable/delete"/>
                                <ImageView
                                    android:id="@+id/jet4plus"
                                    android:layout_width="13dp"
                                    android:layout_height="13dp"
                                    android:layout_marginStart="30dp"
                                    android:tint="@color/black"

                                    android:src="@drawable/plus_icon_svg"/>


                            </LinearLayout>
                        </android.support.design.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:text="2 Min"
                                android:textColor="#fff"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="2 Min"
                                android:textColor="#fff"
                                android:textSize="15dp" />


                        </LinearLayout>





                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/start"
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="START"
                android:textColor="#F18015" />






        </LinearLayout>

    </RelativeLayout>
</ScrollView>
